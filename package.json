{
  "name": "www-short-words",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/short-words",
  "bugs": "https://github.com/wooorm/short-words/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "debounce": "^1.0.0",
    "global": "^4.3.1",
    "nlcst-to-string": "^2.0.0",
    "retext-english": "^3.0.0",
    "syllable": "^3.0.0",
    "unified": "^6.1.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "bundle-collapser": "^1.2.1",
    "cssnano": "^3.10.0",
    "esmangle": "^1.0.1",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.12.1",
    "rehype-cli": "^5.0.0",
    "rehype-preset-minify": "^2.0.0",
    "rehype-prevent-favicon-request": "^1.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "stylelint": "^9.0.0",
    "stylelint-config-standard": "^18.0.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify -p bundle-collapser/plugin src/index.js | esmangle > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src -o dest",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "object-shorthand": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
